#hjson
// OpenNARS 1.5.8
// * 🎯配置启动OpenNARS 1.5.8
{
    description: "OpenNARS 1.5.8"
    // 转译器
    translators: "opennars"
    // 启动命令
    command: {
        // 命令：启动java运行时
        cmd: "java"
        // 传入的命令参数
        cmdArgs: [
            // 设置最大堆内存为1024M
            "-Xmx1024m"
            // 启动jar包
            "-jar"
            // * 🚩【2024-05-09 09:58:35】Java启动失败会直接导致程序退出，不是卡死堵塞的原因
            ./executables/opennars-158-original.jar
        ]
        // 启动时的工作目录
        // * 回溯路径：config(`./`) => / => opennars-158-shell.jar
        currentDir: ./../
    }
    // 自动重启（后续会被覆盖）
    autoRestart: true
}